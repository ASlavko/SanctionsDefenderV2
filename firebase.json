{
  "firestore": {
    "database": "(default)",
    "location": "eur3",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "python311",
      "ignore": [".venv", "__pycache__", "lib"],
      "predeploy": [
        "python -c 'import shutil; shutil.rmtree(\"functions/lib\", ignore_errors=True)'",
        "python -c 'import os; os.makedirs(\"functions/lib\", exist_ok=True)'",
        "pip install -t functions/lib -r functions/requirements.txt"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/admin_dashboard_api",
        "function": { "functionId": "admin_dashboard_api", "region": "europe-west1" }
      },
      {
        "source": "/admin_dashboard_api/**",
        "function": { "functionId": "admin_dashboard_api", "region": "europe-west1" }
      },
      {
        "source": "/download_sanctions_lists",
        "function": { "functionId": "download_sanctions_lists", "region": "europe-west1" }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "apphosting": {
      "port": 5002,
      "rootDirectory": "./"
    },
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8086
    },
    "storage": {
      "port": 9199
    },
    "eventarc": {
      "port": 9299
    },
    "dataconnect": {
      "port": 9399,
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    },
    "tasks": {
      "port": 9499
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
